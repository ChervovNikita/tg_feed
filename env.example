# ======================
# Database Configuration
# ======================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=tg_filter

# ======================
# Telegram Bot
# ======================
BOT_TOKEN=your_bot_token_here

# ======================
# Medium Scraper
# ======================
# Comma-separated list of Medium tags to monitor
MEDIUM_TAGS=programming,technology,software-development,artificial-intelligence,machine-learning

# Medium cookie for GraphQL API (get from browser DevTools)
# Required to fetch full article text
MEDIUM_COOKIE=

# How often to check for new articles (seconds)
POLL_INTERVAL_SECONDS=60

# Minimum article length to process
MIN_ARTICLE_LENGTH=500

# ======================
# OpenAI API
# ======================
OPENAI_API_KEY=your_openai_api_key_here

# ======================
# Grafana
# ======================
GF_SECURITY_ADMIN_PASSWORD=admin

# ======================
# Airflow
# ======================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW__CORE__FERNET_KEY=
AIRFLOW__WEBSERVER__SECRET_KEY=secret
