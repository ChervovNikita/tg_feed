# ===========================================
# TG Channel Filter - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Telegram Bot Configuration
# Get from @BotFather in Telegram
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Telegram Userbot Configuration (Pyrogram)
# Get from https://my.telegram.org
API_ID=12345678
API_HASH=abcdef1234567890abcdef1234567890

# Generate session string using: python scripts/generate_session.py
SESSION_STRING=your_session_string_here

# OpenAI API
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=tg_filter
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Airflow (optional - can leave empty for auto-generation)
AIRFLOW__CORE__FERNET_KEY=
AIRFLOW__WEBSERVER__SECRET_KEY=secret_key_for_webserver

# Grafana
GF_SECURITY_ADMIN_PASSWORD=admin

